<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#f2f3f5"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".MyFragment.Fragment2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/today_to_do"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/ifdone_tag">
            <TextView
                android:layout_width="50dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="#a2a2a2"
                android:hint="今日待办"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/all_plan"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ifdone_tag">
            <TextView
                android:layout_width="50dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="#a2a2a2"
                android:hint="所有规划"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/daka"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:background="@drawable/ifdone_tag">
            <TextView
                android:layout_width="50dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="#a2a2a2"
                android:hint="打卡情况"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f3f5">
        <com.example.daily.MyView.NoSlidingViewPager
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/corner"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/view_page_3"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_alignParentBottom="true"
            app:backgroundTint="#31bfcf"
            android:layout_alignParentEnd="true"
            app:fabSize="normal"
            android:scaleType="fitXY"
            app:rippleColor="#e7d16b"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/add" />

        <TextView
            android:id="@+id/empty_text_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目前还没有计划哦！"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

